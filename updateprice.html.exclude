<!DOCTYPE html>
<html>
<head>
    <script src="../assets/js/vendor/angular.min.js"></script>
</head>
<body ng-app="price" ng-controller="priceCtrl">
    <div>
        {{msg}}
    </div>
    <script>
        var app = angular.module('price', []);
        app.controller('priceCtrl', ['$scope', '$http', function ($scope, $http) {
            var load = function () {
                $scope.msg = 'Update in progress...'
                $http({
                    url: 'Products.asmx/UpdatePrice',
                    method: 'POST',
                    data: ''
                })
               .then(function (response) {
                   $scope.msg = response.data.d;
               },
               function (response) {
                   $scope.msg = response.data.d;
               });
            };
            load();
        }]);
    </script>
</body>
</html>
